<div class="container col-md-10">
    <form class="card p-3 bg-light text-center mt-3 mb-3" href="lego/add" method="post">
        <h2 class="text-bg-success">Add new lego</h2>
        <div class="form-group">
            <label class="h3 text-secondary">Name</label>
            <input type="text" name="name" class="form-control" required />
        </div>
        <div class="form-group">
            <label class="h3 text-secondary">Price</label>
            <input type="number" name="price" class="form-control" required />
        </div>
        <div class="form-group">
            <label class="h3 text-secondary">Image</label>
            <input type="text" name="image" class="form-control" required />
        </div>
        <div class="form-group">
            <label class="h3 text-secondary">Date</label>
            <input type="datetime-local" name="date" class="form-control" required />
        </div>
        <div class="form-group mt-3">
            <label class="text-success h6">Color</label>
            <select name="color" class="form-control">
                <option value="">Select a color</option>
                <option value="red">Red</option>
                <option value="yellow">Yellow</option>
                <option value="pink">Pink</option>
                <option value="black">Black</option>
            </select>
        </div>
        {{!-- <label class="h3 text-secondary">Color</label>
        <input type="text" name="image" class="form-control" required /> --}}



        <div class="form-group">
            <input type="submit" class="btn btn-primary mt-3" value="Add" />
        </div>
    </form>
</div>